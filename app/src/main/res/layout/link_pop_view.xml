<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:gravity="center"
    android:background="@drawable/link_bg">

    <ProgressBar
        android:id="@+id/link_pbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="17"
        android:progress="0"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_color3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#393939"
        android:layout_marginTop="12dp"
        android:text="@string/pop_t_str01"/>

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_link_stop"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:bl_solid_color="#E9E9E8"
        android:layout_gravity="center_horizontal"
        app:bl_corners_radius="30dp"
        app:bl_stroke_color="#393939"
        android:textColor="#393939"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/pop_t_str38"
        app:bl_stroke_width="1dp"/>

</LinearLayout>